---
interface Props {
  title: string;
  description?: string;
  articleData?: {
    title: string;
    description?: string;
    date?: string;
    author?: string;
    slug?: string;
  };
}

const { title, description = "SEO education tailored to your role. Stop reading generic advice.", articleData } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, 'https://seobyrole.com');

const siteJsonLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "SEO by Role",
  "url": "https://seobyrole.com",
  "description": "SEO education tailored to your role. Stop reading generic advice.",
  "publisher": {
    "@type": "Organization",
    "name": "Scale With Search",
    "url": "https://scalewithsearch.com",
    "founder": {
      "@type": "Person",
      "name": "Victor Valentine Romo",
      "url": "https://victorvalentineromo.com",
      "sameAs": [
        "https://scalewithsearch.com",
        "https://victorvalentineromo.com",
        "https://aifirstsearch.com",
        "https://browserprompt.com",
        "https://creatinepedia.com",
        "https://polytraffic.com",
        "https://tattooremovalnear.com",
        "https://comicstripai.com",
        "https://organicarbitrage.com",
        "https://aipaypercrawl.com",
        "https://b2bvic.com",
        "https://seobyrole.com",
        "https://quickfixseo.com"
      ]
    }
  }
};

const articleJsonLd = articleData ? {
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": articleData.title,
  "description": articleData.description || description,
  "datePublished": articleData.date ? articleData.date.replace(/\./g, '-') : undefined,
  "author": {
    "@type": "Person",
    "name": articleData.author || "Victor Valentine Romo",
    "url": "https://victorvalentineromo.com"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Scale With Search",
    "url": "https://scalewithsearch.com"
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `https://seobyrole.com/articles/${articleData.slug || ''}`
  }
} : null;
---

<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL.href} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Entity SEO: rel="me" cross-domain links -->
    <link rel="me" href="https://scalewithsearch.com" />
    <link rel="me" href="https://victorvalentineromo.com" />
    <link rel="me" href="https://aifirstsearch.com" />
    <link rel="me" href="https://browserprompt.com" />
    <link rel="me" href="https://creatinepedia.com" />
    <link rel="me" href="https://polytraffic.com" />
    <link rel="me" href="https://tattooremovalnear.com" />
    <link rel="me" href="https://comicstripai.com" />
    <link rel="me" href="https://organicarbitrage.com" />
    <link rel="me" href="https://aipaypercrawl.com" />
    <link rel="me" href="https://b2bvic.com" />
    <link rel="me" href="https://seobyrole.com" />
    <link rel="me" href="https://quickfixseo.com" />

    <title>{title} | SEO by Role</title>

    <!-- JSON-LD: WebSite -->
    <script type="application/ld+json" set:html={JSON.stringify(siteJsonLd)} />
    {articleJsonLd && (
      <script type="application/ld+json" set:html={JSON.stringify(articleJsonLd)} />
    )}
  </head>
  <body class="h-full bg-white text-primary-900 antialiased">
    <nav class="border-b border-primary-100">
      <div class="mx-auto max-w-5xl px-6 py-4 flex items-center justify-between">
        <a href="/" class="text-xl font-semibold text-primary-900">SEO by Role</a>
        <div class="flex items-center gap-6 text-sm">
          <a href="/articles" class="text-primary-600 hover:text-primary-900 transition-colors">Articles</a>
        </div>
      </div>
    </nav>

    <main>
      <slot />
    </main>

    <footer class="border-t border-primary-100 mt-24">
      <div class="mx-auto max-w-5xl px-6 py-12">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-6">
          <div>
            <p class="font-semibold text-primary-900">SEO by Role</p>
            <p class="text-sm text-primary-500 mt-1">SEO education for your actual job.</p>
          </div>
          <p class="text-sm text-primary-400">&copy; {new Date().getFullYear()} Scale With Search</p>
        </div>
      </div>
    </footer>
  </body>
</html>
